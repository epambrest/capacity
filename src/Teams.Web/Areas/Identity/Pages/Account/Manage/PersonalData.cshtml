@page
@model PersonalDataModel
@{
    ViewData["Title"] = @Localizer["Title"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@Localizer["Main information"]</p>
        <p>
            <strong>@Localizer["Attention message"]</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@Localizer["Download"]</button>
</form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@Localizer["Delete"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}