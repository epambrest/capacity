@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Teams</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ManageTasks/Shared/_NewLayout.css" />
</head>
<body style="height:100vh;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="ManageTeams" asp-action="GetMyTeams">Capacity</a>
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container-fluid">
            <div class="row">
                <div class="navbar-container bg-light col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="padding-bottom:60px; padding-top:60px;">
                    <nav class="navbar navbar-expand-md navbar-light">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbar">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" id="activeSprintLink" href="#">@Localizer["ActiveSprint"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="backlogLink" href="#")>@Localizer["Backlog"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="allSprintsLink" href="#link-2">@Localizer["AllSprints"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="ChartsLink" href="#">@Localizer["Charts"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="taskHistoryLink" href="#link-1">@Localizer["TaskHistory"]</a>
                                </li>
                            </ul>
                        </div>
                        <div class="navbar-text">
                            <div class="row">
                                <button class="btn btn-outline-primary border-0" type="submit">
                                    <i class="fas fa-star"></i>
                                </button>
                                <a class="nav-link push-right" href="#link-1">@Localizer["SprintConfiguration"]</a>
                            </div>
                            <div class="row">
                                <button class="btn btn-outline-primary border-0" asp-action="GetMyTeams" asp-controller="ManageTeams" type="submit">
                                    <i class="fas fa-arrow-left"></i>
                                </button>
                                <a class="nav-link push-right" href="/ManageTeams/GetMyTeams" style="margin-left:4px;">@Localizer["BackToTeams"]</a>
                            </div>
                        </div>
                    </nav>
                </div>
                    <div class="col-sm-5 col-md-5 col-lg-8 col-xl-8 container-fluid" id="contentContainer" style="padding-bottom:60px; padding-top:60px;">
                        @RenderBody()
                    </div>
                </div>
            </div>
    </main>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-bottom">
        <footer class="border-top footer text-muted bg-white">
            <div class="container text-center">
                &copy; 2020 - Teams - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </nav>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <div class="card" id="cardMember" hidden style="position: absolute;">
        <div class="card-body">
            <h5 class="card-title" id="cardTitleMember"></h5>
        </div>
    </div>

</body>
</html>
