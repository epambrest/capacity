@{
    ViewData["Title"] = "Add Member";
}

<div align="center">
    <h1 size="4" align="left">@ViewBag.TeamName | Add Team Member</h1>
</div>

<div>
    @using (Html.BeginForm("AddMember", "ManageTeamMembers", FormMethod.Post))
    {
        @Html.Hidden("team_id", @ViewBag.TeamId as string)
        @section scripts{
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

            <script>
                function myFunction(e) {
                    document.getElementById("user").value = e.target.value
                }
                $(document).ready(function () {
                    $('.js-example-basic-single').select2();
                });
            </script>
        }
        <input hidden="hidden" id="user" name="member_id">

        <select class="js-example-basic-single" id="members" onchange="myFunction(event)">
            <option disabled selected>Choose User</option>
            @foreach (var item in ViewBag.Users)
            {
                <option value=@item.Id>@item.Email</option>
            }
        </select>

        <input id="sub" type="submit" class="btn btn-primary" value="Add Member" />
    }
</div>