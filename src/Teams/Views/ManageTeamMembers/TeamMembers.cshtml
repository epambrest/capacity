@model IEnumerable<Teams.Models.TeamMember>
@{
    ViewBag.Title = "Team Members";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://kit.fontawesome.com/8519ed4a13.js" crossorigin="anonymous"></script>
<div style="margin: 10px 0px 0px 30px" align="left">
    <h><i class="fas fa-arrow-left"></i><a color="black">@Html.ActionLink("Return to your teams", "GetMyTeams", "ManageTeams")</a></h>
</div>
<div align="center">
    <h><font size="6" color="black">@ViewBag.TeamName</font></h>
</div>
<table class="table">
    
    <tr align="center">
        <td align="left" style="border-top: hidden" width="1%"></td>
        <td align="left" style="border-top: hidden; font-weight: bold">Member Email</td>
        <td style="border-top: hidden; visibility: @ViewBag.AddVision" align="right">
            @Html.ActionLink("", "AddMember", new { team_id = ViewBag.TeamId }, new { @class = "fas fa-user-plus", title="Add Member", style = "margin: 10px 0px 0px 30px", align = "right" })
               
        </td>
    </tr>
    <tr align="center">
        <td align="left" width="1%"><i title="Owner" class="fas fa-crown"></i></td>
        <td align="left">@ViewBag.TeamOwner</td>
        <td align="right"></td>
    </tr>
    @foreach (var item in ViewBag.Members)
    {
        <tr align="center">
            <td align="left" width="1%"><i title="Member" class="fas fa-user"></i></td>
            <td align="left">@item.Member.Email</td>
            <td align="right"></td>
            @if (ViewBag.TeamOwner == User.Identity.Name)
            {
                <td align="right">
                    <button type='button' id="1" class='btn btn-outline-danger border-0' data-toggle="modal"
                            data-target="#removeMember" data-teamname="@ViewBag.TeamName" data-teamid="@ViewBag.TeamId"
                            data-membername="@item.Member.Email" data-memberid="@item.MemberId" data-owner="@ViewBag.TeamOwner">
                        <i class='far fa-trash-alt'></i>
                    </button>
                </td>

            }
        </tr>
    }
</table>

<form>
    <div class="modal fade" id="removeMember" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <p align="center" id="member"></p>
                    <input type="hidden" id="team_id" name="team_id" value="team_id" />
                    <input type="hidden" id="member_id" name="member_id" value="member_id" />
                    <input type="hidden" id="owner_name" name="owner_name" value="owner_name" />
                    <input type="hidden" id="team_name" name="team_name" value="team_name" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-secondary" asp-action="Remove">OK</button>
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>

        </div>
    </div>
</form>


<script>
    $(document).ready(function () {
        $("#removeMember").on("show.bs.modal", function (event) {
            var button = $(event.relatedTarget)
            var teamName = button.data('teamname')
            var teamId = button.data('teamid')
            var memberName = button.data('membername')
            var memberId = button.data('memberid')
            var owner = button.data('owner')
            var removeModal = $("#removeMember");
            removeModal.find("#team_id").val(teamId);
            removeModal.find("#team_name").val(teamName);
            removeModal.find("#member_id").val(memberId);
            removeModal.find("#owner_name").val(owner);
            document.getElementById('member').innerHTML =
                "Are you sure you want to remove " + "<strong>" + memberName + "</strong>" + " from " + "<strong>" + teamName + "</strong>" + " ?";
        });
    });
</script>
