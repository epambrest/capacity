@model Teams.ViewModels.AllTasksForTeamViewModel

@{
    ViewData["Title"] = "AllTasksForTeam";
}


<script src="https://kit.fontawesome.com/8519ed4a13.js" crossorigin="anonymous"></script>

<div style="margin: 10px 0px 0px 30px" align="left">
    <h><i class="fas fa-arrow-left"></i><a color="black">@Html.ActionLink("  Return to your teams", "GetMyTeams", "ManageTeams")</a></h>
</div>
<div align="center">
    <h><font size="6" color="black"><strong>@Model.TeamName</strong></font></h>
</div>
<table class="table">

    <tr align="center">
        <td align="left" style="border-top: hidden; font-weight: bold">Name of Task</td>
        <td align="left" style="border-top: hidden; font-weight: bold">User</td>
        <td align="left" style="border-top: hidden; font-weight: bold">Story Point</td>
        <td align="left" style="border-top: hidden; font-weight: bold">Link</td>
        <td style="border-top: hidden"></td>
    </tr>

    @foreach (var item in Model.Tasks)
    {
<tr align="center">
    <td align="left">@item.Name</td>
    <td align="left">@item.TeamMember.Member.Email</td>
    <td align="left">@item.StoryPoints</td>
    <td href="https://@item.Link"><a href="@item.Link" align="left">Link</a></td>
    <td style="visibility: @ViewBag.AddVision" align="right">
        @Html.ActionLink("", "EditTask", new { teamId = Model.First().Team.Id, taskId = item.Id, errorMessage = "" }, new { @class = "fas fa-pen", title = "Edit Task", style = "margin: 10px 0px 0px 30px", align = "right" })
    </td>
</tr>
    }
</table>